<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="http://maven.apache.org/POM/4.0.0"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <!-- The simplest way to build a service with service-sdk-starter-core 
        is to use it as a parent in your project’s POM file, and alternative If you 
        don’t want to use service-sdk-starter-core as your project’s parent, you 
        can declare it as a dependency instead, see pom-as-dependency.xml -->
    <parent>
        <groupId>com.backbase.buildingblocks</groupId>
        <version>11.3.0</version>
        <artifactId>service-sdk-starter-core</artifactId>
        <relativePath/>
    </parent>

    <groupId>com.backbase.productled</groupId>
    <artifactId>cards-presentation-service</artifactId>
    <version>1.0.0-SNAPSHOT</version>
    <packaging>war</packaging>
    <name>Backbase :: cards presentation service</name>

    <properties>
        <product-summary-presentation-spec.version>1.36.9.2</product-summary-presentation-spec.version>
        <java.version>1.8</java.version>
        <docker.repo.url>${DOCKER_REPO_URL}</docker.repo.url>
        <docker.image.name>${docker.repo.url}/${project.artifactId}</docker.image.name>
        <jib.to.image>${docker.image.name}:${project.version}</jib.to.image>
        <spec.dependencies.path>${project.build.directory}/dependencies</spec.dependencies.path>
        <lombok.version>1.18.12</lombok.version>
        <cards-presentation-spec.version>1.1.27</cards-presentation-spec.version>
        <mambu.clients.version>1.0.1-cr.11</mambu.clients.version>

        <openapi-generator-maven-plugin.library>resttemplate</openapi-generator-maven-plugin.library>
        <openapi-generator-maven-plugin.java8>true</openapi-generator-maven-plugin.java8>
        <openapi-generator-maven-plugin.dateLibrary>java8</openapi-generator-maven-plugin.dateLibrary>
        <openapi-generator-maven-plugin.hideGenerationTimestamp>true
        </openapi-generator-maven-plugin.hideGenerationTimestamp>
        <!-- Sonar -->
        <sonar.projectKey>${SONAR_PROJECT_KEY}</sonar.projectKey>
        <sonar.organization>${SONAR_ORGANIZATION}</sonar.organization>
        <sonar.host.url>https://sonarcloud.io</sonar.host.url>
        <sonar.scanner.force-deprecated-java-version>true</sonar.scanner.force-deprecated-java-version>
        <SIG_SECRET_KEY>JWTSecretKeyDontUseInProduction!</SIG_SECRET_KEY>
    </properties>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>com.backbase.mambu</groupId>
                <artifactId>mambu-clients</artifactId>
                <version>${mambu.clients.version}</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>
        </dependencies>
    </dependencyManagement>

    <dependencies>
        <dependency>
            <groupId>com.backbase.buildingblocks</groupId>
            <artifactId>communication</artifactId>
        </dependency>
        <dependency>
            <groupId>com.backbase.buildingblocks</groupId>
            <artifactId>building-blocks-common</artifactId>
        </dependency>
        <dependency>
            <groupId>org.projectlombok</groupId>
            <artifactId>lombok</artifactId>
        </dependency>
        <dependency>
            <groupId>com.backbase.buildingblocks</groupId>
            <artifactId>api</artifactId>
        </dependency>
        <dependency>
            <groupId>com.backbase.buildingblocks</groupId>
            <artifactId>auth-security</artifactId>
        </dependency>
        <dependency>
            <groupId>com.backbase.mambu</groupId>
            <artifactId>mambu-deposit-accounts-client</artifactId>
        </dependency>
        <dependency>
            <groupId>com.backbase.buildingblocks</groupId>
            <artifactId>service-sdk-starter-test</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>com.backbase.buildingblocks</groupId>
            <artifactId>communication</artifactId>
            <version>11.2.1</version>
        </dependency>
        <dependency>
            <groupId>com.backbase.buildingblocks</groupId>
            <artifactId>building-blocks-common</artifactId>
            <version>11.3.0</version>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.8.1</version>
                <configuration>
                    <annotationProcessorPaths>
                        <path>
                            <groupId>org.projectlombok</groupId>
                            <artifactId>lombok</artifactId>
                            <version>${lombok.version}</version>
                        </path>
                    </annotationProcessorPaths>
                </configuration>
            </plugin>
            <plugin>
                <groupId>io.swagger</groupId>
                <artifactId>swagger-codegen-maven-plugin</artifactId>
                <version>2.4.7</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <configuration>
                            <inputSpec>${basedir}/src/main/resources/marqeta_v3_swagger.json</inputSpec>
                            <language>java</language>
                            <library>resttemplate</library>
                            <output>${project.basedir}/target/generated-sources/</output>
                            <apiPackage>com.backbase.marqeta.clients.api</apiPackage>
                            <modelPackage>com.backbase.marqeta.clients.model</modelPackage>
                            <generateApiTests>false</generateApiTests>
                            <generateModelTests>false</generateModelTests>
                            <generateApiDocumentation>false</generateApiDocumentation>
                            <generateModelDocumentation>false</generateModelDocumentation>
                            <configOptions>
                                <dateLibrary>java8</dateLibrary>
                                <sourceFolder>restclient</sourceFolder>
                            </configOptions>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>com.backbase.codegen</groupId>
                <artifactId>raml-api-maven-plugin-1-0</artifactId>
                <executions>
                    <execution>
                        <id>cards-presentation-spec</id>
                        <goals>
                            <goal>raml-api-generator</goal>
                        </goals>
                        <configuration>
                            <inputSpec>
                                <groupId>com.backbase.dbs.cards</groupId>
                                <artifactId>cards-presentation-spec</artifactId>
                                <version>${cards-presentation-spec.version}</version>
                                <inputFiles>
                                    <inputFile>api.raml</inputFile>
                                </inputFiles>
                            </inputSpec>
                            <outputFile>target/generated-sources/</outputFile>
                            <serviceId>cards-presenation-service</serviceId>
                            <packageName>presentation.card</packageName>
                            <basePackageName>com.backbase</basePackageName>
                            <includeBindingResult>true</includeBindingResult>
                            <generateApi>true</generateApi>
                        </configuration>
                    </execution>
                    <execution>
                        <id>product-summary-presentation-spec</id>
                        <goals>
                            <goal>raml-api-generator</goal>
                        </goals>
                        <configuration>
                            <inputSpec>
                                <groupId>com.backbase.dbs.productsummary</groupId>
                                <artifactId>product-summary-presentation-spec</artifactId>
                                <version>${product-summary-presentation-spec.version}</version>
                                <inputFiles>
                                    <inputFile>api.raml</inputFile>
                                    <inputFile>service-api.raml</inputFile>
                                </inputFiles>
                            </inputSpec>
                            <outputFile>target/generated-sources/</outputFile>
                            <serviceId>arrangement-manager</serviceId>
                            <packageName>productsummary</packageName>
                            <basePackageName>com.backbase.productled</basePackageName>
                            <generateApi>false</generateApi>
                            <generateClients>true</generateClients>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>build-helper-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>test</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>add-source</goal>
                        </goals>
                        <configuration>
                            <sources>
                                <source>${basedir}/target/generated-sources</source>
                            </sources>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
